{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "alwaysStrict": true
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules", "dist" ]
}
