# ==== FlowForge env (copy this file to .env and edit) ====

# FastAPI server
PF_API_HOST=127.0.0.1
PF_API_PORT=8000

# Comma-separated list of allowed origins for CORS in dev
PF_CORS_ORIGINS=http://127.0.0.1:5173,http://localhost:5173

# Dev API key (use a strong one for real work; rotate regularly)
PF_API_KEY=dev-secret-123

# UI dev host/port (scripts/dev_ui.ps1 reads these)
PF_UI_HOST=127.0.0.1
PF_UI_PORT=5173
